<div class="card">
  <div class="card-block">
    <h4 class="card-title"><%= comment.content %></h4>
    <h6 class="card-subtitle mb-2 text-muted">Posted by: <%= comment.user.email %> <%= time_ago_in_words(comment.created_at) %> ago</h6>
    <% if user_signed_in? %>
      <% if comment.user_id == current_user.id %>
        <%= link_to 'Edit', edit_article_comment_path(comment.article, comment), class: "card-link" %>
        <%= link_to 'Delete', article_comment_path(comment.article, comment), method: :delete, data: { confirm: "Are you sure you want to delete your comment?"} %>
      <% end %>
    <% end %>
  </div>
</div>
