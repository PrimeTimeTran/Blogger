<div class="card">
  <div class="card-header">
    <%= time_ago_in_words(comment.created_at) %> ago
    <% if user_signed_in? %>
      <% if comment.user_id == current_user.id %>
        <%= link_to 'Edit', edit_article_comment_path(@article, comment), class: 'btn btn-success'  %>
        <%= link_to 'Delete', article_comment_path(@article, comment), method: 'delete', data: {confirm: "Are you sure you want to delete Article #{comment.content}?"}, class: 'btn btn-danger' %>
      <% end %>
    <% end %>
  </div>
  <div class="card-block">
    <blockquote class="card-blockquote">
      <p><%= comment.content %></p>
      <footer>Posted by: <%= comment.user.email %></footer>
    </blockquote>
  </div>
</div>
